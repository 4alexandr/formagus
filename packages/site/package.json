{
  "name": "site",
  "version": "1.0.0",
  "main": "index.js",
  "private": true,
  "license": "MIT",
  "scripts": {
    "build": "webpack",
    "start": "webpack-dev-server --open",
    "now-start": "serve dist --single",
    "format": "prettier --write '{src,test}/**/*.{ts,tsx,js,json,scss,css}'",
    "prepush": "npm run upload",
    "precommit": "lint-staged",
    "postcommit": "git update-index --again",
    "upload": "npm run build && npm run prepare:upload && surge --project ./dist --domain formagus.surge.sh",
    "prepare:upload": "node ./build/fix-surge-routing"
  },
  "lint-staged": {
    "*.{ts,tsx,js,json,scss,css}": [
      "prettier --write",
      "git add"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.0.0-beta.46",
    "@babel/preset-env": "^7.1.0",
    "@babel/preset-react": "^7.0.0-beta.46",
    "@mdx-js/loader": "^1.6.18",
    "babel-core": "^6.26.3",
    "babel-loader": "^8.0.0-beta",
    "babel-plugin-syntax-dynamic-import": "^6.18.0",
    "babel-plugin-transform-class-properties": "^6.24.1",
    "babel-plugin-transform-react-jsx": "^6.24.1",
    "cheerio": "^1.0.0-rc.2",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^4.3.0",
    "lint-staged": "^10.4.0",
    "markdown-it-mermaid": "^0.2.5",
    "mini-css-extract-plugin": "^0.11.2",
    "node-sass": "^4.14.1",
    "prettier": "^2.1.2",
    "react-hot-loader": "^4.1.2",
    "react-svg-loader": "^3.0.3",
    "rehype-highlight": "^4.0.0",
    "sass-loader": "^10.0.2",
    "style-loader": "^1.2.1",
    "surge": "^0.21.6",
    "uglifyjs-webpack-plugin": "^2.0.1",
    "webpack": "^4.6.0",
    "webpack-cli": "^3.1.2",
    "webpack-dev-server": "^3.1.4"
  },
  "dependencies": {
    "@mdx-js/mdx": "^1.6.18",
    "@reach/router": "^1.3.4",
    "@reactions/component": "^2.0.2",
    "glamor": "^2.20.40",
    "html-webpack-plugin": "^4.5.0",
    "markdown-it": "^11.0.1",
    "mermaid": "^8.0.0-rc.8",
    "prismjs": "^1.14.0",
    "prop-types": "15",
    "react": "^16.6.0",
    "react-dom": "^16.6.0",
    "react-github-corner": "^2.3.0",
    "react-media": "^1.8.0",
    "react-responsive-modal": "^3.5.0",
    "rehype-parse": "^7.0.1",
    "rehype-stringify": "^8.0.0",
    "remark-highlight.js": "^6.0.0",
    "scroll-into-view-if-needed": "^2.1.5",
    "serve": "^11.3.2",
    "unified": "^9.2.0",
    "unist-util-visit": "^2.0.3"
  }
}
